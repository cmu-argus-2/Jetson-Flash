#include <dt-bindings/tegra234-p3767-0000-common.h>
#include "tegra234-camera-argus-imx708.dtsi"

#define CAM0_RST        TEGRA234_MAIN_GPIO(H, 3)
#define CAM0_PWDN	    TEGRA234_MAIN_GPIO(H, 6)
#define CAM1_PWDN	    TEGRA234_MAIN_GPIO(AC, 0)
#define CAM2_PWDN	    TEGRA234_MAIN_GPIO(N, 1)
#define CAM3_PWDN	    TEGRA234_MAIN_GPIO(H, 0)
#define CAM_I2C_MUX 	TEGRA234_AON_GPIO(CC, 3)

/ {
	fragment-camera-imx708@0 {
		target-path = "/";
		__overlay__ {
			bus@0 {
				i2c@3180000 {
					tca9548@70 {
						compatible = "nxp,pca9548";
						reg = <0x70>;
						#address-cells = <1>;
						#size-cells = <0>;
						skip_mux_detect = "yes";
						/*force_bus_start = <0x1E>; */
						vcc-supply = <&vdd_1v8_ls>;
						status = "okay";
						i2c@0 {
							reg = <0>;
							i2c-mux,deselect-on-exit;
							#address-cells = <1>;
							#size-cells = <0>;
							argus_imx708_a@1a {
								reset-gpios = <&gpio CAM0_PWDN GPIO_ACTIVE_HIGH>;
							};
						};
						i2c@1 {
							reg = <1>;
							i2c-mux,deselect-on-exit;
							#address-cells = <1>;
							#size-cells = <0>;
							argus_imx708_b@1a {
								reset-gpios = <&gpio CAM1_PWDN GPIO_ACTIVE_HIGH>;
							};
						};						
						i2c@2 {
							reg = <2>;
							i2c-mux,deselect-on-exit;
							#address-cells = <1>;
							#size-cells = <0>;
							argus_imx708_c@1a {
								reset-gpios = <&gpio CAM2_PWDN GPIO_ACTIVE_HIGH>;
							};
						};						
						i2c@3 {
							reg = <3>;
							i2c-mux,deselect-on-exit;
							#address-cells = <1>;
							#size-cells = <0>;
							argus_imx708_d@1a {
								reset-gpios = <&gpio CAM3_PWDN GPIO_ACTIVE_HIGH>;
							};
						};
					};
				};

				gpio@2200000 {
					camera-control-output-low {
						gpio-hog;
						output-low;
						gpios = <CAM0_RST 0>;
						label = "cam0-rst";
					};
				};
			};
		};
	};
};
